@model SnapCot.Web.ViewModels.CommentsViewModels.PageableCommentViewModel
@using SnapCot.Web.ViewModels.CommentsViewModels
@{
    ViewBag.Title = "All";
}

@if (this.TempData["Notification"] != null)
{
    <div class="alert alert-success">@this.TempData["Notification"]</div>
}

@Html.Partial("_AllCommentsPartialView", Model)

@if (this.User.Identity.IsAuthenticated)
{
    @Html.Partial("_AddCommentPartial", new CommentInputModel())
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryajax")
}