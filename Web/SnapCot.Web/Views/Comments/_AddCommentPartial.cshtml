@model SnapCot.Web.ViewModels.CommentsViewModels.CommentInputModel

@using (Ajax.BeginForm("AddComment", "Comments",
                                 new AjaxOptions
                                 {
                                     HttpMethod = "POST",
                                     InsertionMode = InsertionMode.Replace,
                                     UpdateTargetId = "comments"
                                 }))
{
    @Html.AntiForgeryToken()

    <form class="form-inline" role="form">
        <div class="form-group">
            @Html.EditorFor(m => m.Content, new { htmlAttributes = new { @class = "form-control myCustomTextBox", rows = "2", placeholder = "Leave comment..." } })
            @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Comment" class="btn btn-default text-center" />
        </div>
    </form>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}