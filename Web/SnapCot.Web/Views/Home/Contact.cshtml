@{
    ViewBag.Title = "Contact Us";
}
@*<h3>@ViewBag.Message</h3>*@

<div class="div-box-body contact image-size">
    <div class="container div-box-content">
        <h2 class="text-center">@ViewBag.Title</h2>
        <div class="row">
            <div class="col-md-7">
                <div id="map_canvas" style="width: 640px; height: 480px;"></div>
            </div>
            <div class="col-md-5">
                <address>
                    SnapCot Commercial Headquarters: <br />
                    Downers Grove, IL, 331-777-6000<br />
                    <abbr title="Phone">P:</abbr>
                    For General information and pricing, please call: 331-777-6000
                </address>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            initialize();
        });
        function initialize() {
            var mapOptions = {
                center: new google.maps.LatLng(42.70, 23.30),
                zoom: 10,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            var map = new google.maps.Map(document.getElementById("map_canvas"),
              mapOptions);
            // create a marker
            var latlng = new google.maps.LatLng(42.70, 23.30);
            var marker = new google.maps.Marker({
                position: latlng,
                map: map,
                title: 'My Place'
            });
        }
    </script>
